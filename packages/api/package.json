{
  "name": "@maracuja/api",
  "version": "1.0.0",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "lint": "eslint .",
    "start": "yarn start:local",
    "kill-ports": "npx kill-port 9099 && npx kill-port 8081 && npx kill-port 8085 && npx kill-port 5001",
    "start-force": "yarn kill-ports && yarn start",
    "start:local": "yarn use-dev && yarn emulators",
    "start:dev": "yarn use-dev && yarn functions",
    "start:prod": "yarn use-prod && yarn functions",
    "start-em": "firebase emulators:start",
    "functions-damien": "firebase serve -o 192.168.0.10 -p 5000",
    "em-functions": "firebase emulators:start --only functions",
    "em-firestore": "firebase emulators:start --only firestore",
    "emulators": "firebase emulators:start --import ./database --export-on-exit",
    "functions": "firebase serve --only functions --port=5001",
    "shell": "firebase functions:shell",
    "use-dev": "firebase use staging && firebase functions:config:get > .runtimeconfig.json",
    "use-prod": "firebase use production && firebase functions:config:get > .runtimeconfig.json",
    "start-shell": "yarn shell",
    "list-functions": "firebase functions:list",
    "deploy": "firebase deploy --only functions",
    "deploy:prod": "yarn use-prod && yarn deploy",
    "deploy:dev": "yarn use-dev && yarn deploy",
    "deploy-f": "firebase deploy --only functions:$f",
    "deploy-f2": "firebase deploy --only functions:$f1,functions:$f2",
    "deploy-f:prod": "yarn use-prod && firebase deploy --only functions:$f",
    "deploy-f:dev": "yarn use-dev && firebase deploy --only functions:$f",
    "logs": "firebase functions:log",
    "config": "firebase functions:config:get > .runtimeconfig.json",
    "deploy-rules:dev": "yarn use-dev && firebase deploy --only firestore:rules",
    "deploy-rules:prod": "yarn use-prod && firebase deploy --only firestore:rules",
    "test-workflows": "act --secret-file .act.secrets",
    "test-all": "mocha --reporter spec tests --timeout 10000",
    "test-f": "mocha --reporter spec tests/$f --timeout 10000",
    "test": "mocha --reporter spec tests --timeout 10000",
    "test-current": "mocha --reporter spec tests/subscribePlayer",
    "test-before-deploy": "mocha --reporter spec tests/createUser --timeout 5000 --exit",
    "dl-folder": "gsutil -m cp -R $f ."
  },
  "dependencies": {
    "@google-cloud/logging": "^8.0.9",
    "@google-cloud/storage": "^5.7.4",
    "algoliasearch": "^3.35.1",
    "async": "^3.2.0",
    "async-each": "^1.0.3",
    "async-foreach": "^0.1.3",
    "babel-eslint": "^10.1.0",
    "camelcase": "^6.3.0",
    "capture-website": "^1.4.0",
    "chai": "^4.3.4",
    "child-process-promise": "^2.2.1",
    "cors": "^2.8.5",
    "dayjs": "^1.11.5",
    "dotenv": "^8.2.0",
    "expect": "^29.2.0",
    "firebase-admin": "^9.3.0",
    "firebase-functions": "^3.15.7",
    "firebase-tools": "^9.20.0",
    "form-data": "^2.3.3",
    "fs": "0.0.1-security",
    "glob": "^7.1.6",
    "google-spreadsheet": "^3.1.15",
    "googleapis": "^61.0.0",
    "json2csv": "^5.0.3",
    "lodash.clone": "^4.5.0",
    "lodash.clonedeep": "^4.5.0",
    "lodash.merge": "^4.6.2",
    "mailchimp-api-v3": "^1.13.1",
    "moment": "^2.29.1",
    "moment-timezone": "^0.5.34",
    "nanoid": "^3.1.23",
    "node-mailjet": "^3.3.1",
    "openai": "^3.2.1",
    "os": "^0.1.1",
    "path": "^0.12.7",
    "querystring": "^0.2.1",
    "sharp": "^0.28.3",
    "twilio": "^3.76.1",
    "util": "^0.12.5",
    "uuid": "^8.3.1",
    "uuidv4": "^6.2.6"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.13.14",
    "eslint": "^7.25.0",
    "eslint-plugin-promise": "^4.0.1",
    "firebase-functions-test": "^0.3.3",
    "mocha": "^9.1.2",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": "16"
  },
  "private": true
}